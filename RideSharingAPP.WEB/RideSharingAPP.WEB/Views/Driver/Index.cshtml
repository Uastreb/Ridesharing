@model RideSharingAPP.WEB.Models.Driver.DriverViewModel
@{
    Layout = "~/Views/Shared/_LayoutDriver.cshtml";
    ViewBag.Title = "PersonalArea";
}

<div>
    @Html.AntiForgeryToken()
    <h4>Данные о учетной записи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Вы зарегестрированы")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateOfRegistration)
        </dd>
        <dt>
            @Html.Label("Имя")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.Label("Фамилия")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.Label("Отчество")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Patronymic)
        </dd>

        <dt>
            @Html.Label("Дата рождения")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>

        <dt>
            @Html.Label("Номер телефона")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telephone)
        </dd>

        <dt>
            @Html.Label("Комментарий для пользователей")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comments)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Изменить данные учетной записи", "EditDriver", new { id = Model.id }, new { @class = "btn btn-default" })
</p>
<p>
    @Html.ActionLink("Изменить пароль", "ChangePassword", new { id = Model.id }, new { @class = "btn btn-default" })
</p>

